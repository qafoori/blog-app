<h1>Edit new article</h1>

<% if @article.errors.any?  %> 
  <% @article.errors.full_messages.each do |msg| %>
    <%= msg %><br/>
  <% end %>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%= f.label :title %>
    <br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
You can also <%= link_to "get outta here", articles_path  %>
</p>