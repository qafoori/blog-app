<h1>Articles listing page</h1>

<table class="table">
  <thead>
  <tr>
    <th>#</th>
    <th>id</th>
    <th>Title</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% index = 0 %>
  <% @article.each do |article| %>
    <tr>
      <td><%= index += 1 %></td>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td>
        <%= link_to "Destroy", article_path(article), method: :delete, data: { confirm: "Are you really ok with destroying \"#{article.title}\"" } %>
        |
        <%= link_to "Visit", article_path(article) %>
        |
        <%= link_to "Edit", edit_article_path(article) %>
      </td>
    </tr>
  <% end %>

  <a class='btn btn-success' href='/articles/new'>Create new Article</a>


  </tbody>
</table>